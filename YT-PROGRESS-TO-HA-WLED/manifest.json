{
    "manifest_version": 2,
    "name": "YT PROGRESS TO HA WLED",
    "version": "1.0",
    "description": "Suivre la progression de la vid√©o youtube sur votre ruban led WLED via Home Assistant",
    "browser_action": {
      "default_popup": "options.html"
    },
    "icons": {
      "128": "icons/logo_128.png",
      "512": "icons/logo_512.png"
    },
    "permissions": [
      "https://www.youtube.com/*",
      "activeTab",
      "<all_urls>",
      "storage"
    ],
    "content_scripts": [
      {
        "matches": [
          "https://www.youtube.com/watch*",
          "https://www.youtube.com/shorts/*"
        ],
        "js": ["content.js"]
      }
    ]
  }
  
